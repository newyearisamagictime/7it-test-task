{% extends 'base.html.twig' %}

{% block title %} Special Offer: Get Your Plumbus Now! {% endblock %}

{% block content %}
    <h1>Special Offer: Get Your Plumbus Now!</h1>
    <img src="{{ asset('plumbus.png') }}" alt="Plumbus" style="width: 300px;">
    <form method="post" action="{{ path('app.order_submit') }}">
        <input type="text" name="name" placeholder="Your Name" required>
        <input type="tel" name="phone" placeholder="Your Phone" required>
        <button type="submit">Submit</button>
    </form>
{% endblock %}
